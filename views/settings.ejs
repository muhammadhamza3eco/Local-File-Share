<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Settings - <%= username %></title>
    <link rel="stylesheet" href="/style.css">
    <!-- Add Roboto font (already included) -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700&display=swap">
    <!-- Add Material Icons -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
</head>
<body>
    <div class="sidebar">
        <div class="sidebar-header">
            <h1><span class="material-icons">dns</span> File Share <span class="app-version">v<%= appVersion %></span></h1>
        </div>
        <nav class="sidebar-nav">
            <a href="/" class="sidebar-link"><span class="material-icons">folder</span> My Files</a>
            <a href="/shared-public" class="sidebar-link"><span class="material-icons">share</span> Shared Publicly</a>
            <a href="/activity-log" class="sidebar-link"><span class="material-icons">history</span> Activity Log</a>
            <!-- Consider adding an active class to a settings link if needed -->
        </nav>
        <div class="sidebar-footer">
             <div class="user-info-container">
                <div class="user-info">
                    <span title="Username"><span class="material-icons">person</span> <strong><%= username %></strong></span>
                    <% if (typeof userIp !== 'undefined' && userIp) { %>
                        <span title="IP Address"><span class="material-icons">lan</span> <%= userIp %></span>
                    <% } %>
                </div>
                 <a href="/settings" class="settings-link icon-button active" title="Settings"> <!-- Added active class -->
                    <span class="material-icons">settings</span>
                </a>
            </div>
             <div id="current-time-display" class="sidebar-time"></div> <!-- Added Time Display -->
            <a href="/logout" class="logout-link"><span class="material-icons">logout</span> Logout</a>
        </div>
    </div>

    <div class="main-content">
        <div class="header-bar">
            <h2><span class="material-icons">settings</span> User Settings</h2>
        </div>

        <% if (typeof message !== 'undefined' && message) { %>
            <p class="success-message"><%= message %></p> <!-- Placeholder for success messages -->
        <% } %>
         <% if (typeof error !== 'undefined' && error) { %>
            <p class="error-message"><%= error %></p> <!-- Placeholder for error messages -->
        <% } %>

        <div class="settings-section">
            <h3><span class="material-icons">account_circle</span> Profile Information</h3>
            <form action="/update-profile" method="post" class="settings-form">
                <div class="form-group">
                    <label for="username">Username (cannot be changed)</label>
                    <input type="text" id="username" name="username" value="<%= username %>" disabled>
                </div>
                <div class="form-group">
                    <label for="name">Name (Optional)</label>
                    <input type="text" id="name" name="name" placeholder="Your full name" value="<%= locals.name || '' %>">
                </div>
                 <div class="form-group">
                    <label for="location">Location (Optional)</label>
                    <input type="text" id="location" name="location" placeholder="City, Country" value="<%= locals.location || '' %>">
                </div>
                <button type="submit"><span class="material-icons">save</span> Update Profile</button>
            </form>
        </div>

        <hr>

        <div class="settings-section">
             <h3><span class="material-icons">password</span> Change Password</h3>
             <form action="/change-password" method="post" class="settings-form">
                <div class="form-group">
                    <label for="currentPassword">Current Password</label>
                    <input type="password" id="currentPassword" name="currentPassword" required>
                </div>
                 <div class="form-group">
                    <label for="newPassword">New Password</label>
                    <input type="password" id="newPassword" name="newPassword" required>
                     <!-- Add strength indicator if desired -->
                </div>
                 <div class="form-group">
                    <label for="confirmNewPassword">Confirm New Password</label>
                    <input type="password" id="confirmNewPassword" name="confirmNewPassword" required>
                </div>
                <button type="submit"><span class="material-icons">lock_reset</span> Change Password</button>
            </form>
        </div>

    </div>

    <!-- Add specific JS if needed for password validation/strength -->
</body>
</html>