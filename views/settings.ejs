<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Settings - <%= username %></title>
    <link rel="stylesheet" href="/style.css">
    <!-- Add Roboto font (already included) -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700&display=swap">
    <!-- Add Material Icons -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
</head>
<body>
    <!-- Menu Toggle Button for Mobile -->
    <button class="menu-toggle" id="menuToggleBtn" aria-label="Toggle menu">
        <span class="material-icons">menu</span>
    </button>
    <%- include('partials/sidebar', { currentPage: 'settings' }) %>

    <div class="main-content">
        <div class="header-bar">
            <h2><span class="material-icons">settings</span> User Settings</h2>
        </div>

        <% if (typeof message !== 'undefined' && message) { %>
            <p class="success-message"><%= message %></p> <!-- Placeholder for success messages -->
        <% } %>
         <% if (typeof error !== 'undefined' && error) { %>
            <p class="error-message"><%= error %></p> <!-- Placeholder for error messages -->
        <% } %>

        <div class="settings-section">
            <h3><span class="material-icons">account_circle</span> Profile Information</h3>
            <form action="/update-profile" method="post" class="settings-form">
                <div class="form-group">
                    <label for="username">Username (cannot be changed)</label>
                    <input type="text" id="username" name="username" value="<%= username %>" disabled>
                </div>
                <div class="form-group">
                    <label for="name">Name (Optional)</label>
                    <input type="text" id="name" name="name" placeholder="Your full name" value="<%= locals.name || '' %>">
                </div>
                 <div class="form-group">
                    <label for="location">Location (Optional)</label>
                    <input type="text" id="location" name="location" placeholder="City, Country" value="<%= locals.location || '' %>">
                </div>
                <button type="submit"><span class="material-icons">save</span> Update Profile</button>
            </form>
        </div>

        <hr>

        <div class="settings-section">
             <h3><span class="material-icons">password</span> Change Password</h3>
             <form action="/change-password" method="post" class="settings-form">
                <div class="form-group">
                    <label for="currentPassword">Current Password</label>
                    <input type="password" id="currentPassword" name="currentPassword" required>
                </div>
                 <div class="form-group">
                    <label for="newPassword">New Password</label>
                    <input type="password" id="newPassword" name="newPassword" required>
                     <!-- Add strength indicator if desired -->
                </div>
                 <div class="form-group">
                    <label for="confirmNewPassword">Confirm New Password</label>
                    <input type="password" id="confirmNewPassword" name="confirmNewPassword" required>
                </div>
                <button type="submit"><span class="material-icons">lock_reset</span> Change Password</button>
            </form>
        </div>

    </div>

    <!-- Add specific JS if needed for password validation/strength -->
    <script src="/script.js"></script> <!-- Add main script include -->
</body>
</html>